<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/on_surface_secondary"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gps_fixed"
            android:contentDescription="@string/pick_up_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/tvSolicitudId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SOLICITUD #12345"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintStart_toEndOf="@+id/ivLocationIcon"
            app:layout_constraintEnd_toStartOf="@+id/tvEstado" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PENDIENTE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/status_pending"
            app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Calle Falsa 123, Springfield, USA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvInfoExtra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Sucursal de Origen: Principal"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDireccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tvFranjaHoraria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Franja: 10:00 - 12:00"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvInfoExtra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCreado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Creado: 2025-09-30 18:30"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFranjaHoraria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinnerGestorAsignar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:hint="Seleccionar Gestor"
            android:background="@drawable/bg_spinner_border"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCreado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnAsignarGestor"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintHorizontal_weight="3" />

        <Button
            android:id="@+id/btnAsignarGestor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_assign"
            style="@style/Widget.MaterialComponents.Button"
            android:minHeight="48dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/spinnerGestorAsignar"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerGestorAsignar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinnerGestorAsignar"
            app:layout_constraintHorizontal_weight="1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintTop_toBottomOf="@+id/btnAsignarGestor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnConfirmDelivery"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_confirmation_code"
                android:inputType="textCapCharacters"
                android:maxLength="6"
                android:minHeight="48dp"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnConfirmDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_confirm"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/primary_color"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/tilConfirmCode"
            app:layout_constraintBottom_toBottomOf="@+id/tilConfirmCode"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tilConfirmCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnCancelClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/action_cancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/status_error"
                android:visibility="gone"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/btnAcceptDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/action_accept"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:visibility="gone"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/btnStartRouteDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/action_on_route"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
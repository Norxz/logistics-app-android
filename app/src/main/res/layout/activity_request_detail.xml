<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface"
    android:padding="24dp"
    tools:context=".ui.RequestDetailActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Botón de regreso"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_color" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestión de Solicitud"
        android:textColor="@color/md_black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <TextView
        android:id="@+id/tvDetailGuiaID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle"
        tools:text="Guía: #202500045" />

    <TextView
        android:id="@+id/tvDetailStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/on_surface"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailGuiaID"
        tools:text="Estado Actual: PENDIENTE" />

    <TextView
        android:id="@+id/tvAssignedDriver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/on_surface"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailStatus"
        tools:text="Asignado a: (Aún no asignado)" />

    <TextView
        android:id="@+id/tvDetailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:textColor="@color/on_surface_secondary"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAssignedDriver"
        tools:text="Dirección: Calle 10 # 5-20, Zona Norte, Medellín" />

    <TextView
        android:id="@+id/tvDetailClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="8dp"
        android:textColor="@color/on_surface_secondary"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailAddress"
        tools:text="Cliente: Ana María (300 123 4567)" />

    <TextView
        android:id="@+id/tvDetailCreated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/on_surface_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailClient"
        tools:text="Creada el: 08/11/2025 10:00" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailCreated"/>

    <TextView
        android:id="@+id/tvAssignTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asignar o Reasignar Conductor"
        android:textColor="@color/md_black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <Spinner
        android:id="@+id/spinnerDrivers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_spinner_border"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveAssignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAssignTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveAssignment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Guardar"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp"
        android:backgroundTint="@color/status_success"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerDrivers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerDrivers" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDrivers"/>

    <TextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar Estado de la Solicitud"
        android:textColor="@color/md_black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_spinner_border"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatusTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveStatus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Guardar"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp"
        android:backgroundTint="@color/accent_orange"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>
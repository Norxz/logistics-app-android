<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/on_surface_secondary"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gps_fixed"
            android:contentDescription="@string/pick_up_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/tvShipmentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/guide_example"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintStart_toEndOf="@+id/ivLocationIcon"
            app:layout_constraintEnd_toStartOf="@+id/tvEstado" /> <TextView
        android:id="@+id/tvEstado" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PENDIENTE"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/status_pending"
        app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
        app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
        app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDireccion" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calle Falsa 123, Springfield, USA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvFecha" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha: 2025-10-01 10:00 - 12:00"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDireccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCreado" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Creado: 2025-09-30 18:30"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCreado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnAceptar" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Aceptar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCancelar" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Cancelar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/status_error"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnEnCamino" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="En Camino"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnEntregado" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Entregado"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="@color/status_success"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnConfirmar" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Confirmar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="@color/primary_color"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_description"
        android:textSize="18sp"
        android:textColor="@color/on_surface_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/tvInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewPickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_new_delivery"
            android:paddingVertical="18dp"
            android:backgroundTint="@color/primary_color"
            app:icon="@drawable/ic_add_circle"
            app:iconGravity="textStart"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackShipments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_status"
            android:paddingVertical="18dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/primary_color"
            android:textColor="@color/primary_color"
            app:icon="@drawable/ic_track"
            app:iconTint="@color/primary_color"
            app:iconGravity="textStart"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShipmentHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_last_deliverys"
            android:paddingVertical="18dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/on_surface"
            app:icon="@drawable/ic_history"
            app:iconTint="@color/on_surface"
            app:iconGravity="textStart"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/on_surface_secondary"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Un borde sólido gris claro -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Color gris claro -->

    <!-- Esquinas redondeadas para mejor estética Material Design -->
    <corners
        android:radius="8dp" />

    <!-- Relleno interno, en este caso transparente, ya que el TextView o el Fragment irá dentro -->
    <solid
        android:color="@android:color/transparent" />

    <!-- Padding para que el contenido dentro del borde no toque los límites (opcional) -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />
</shape>
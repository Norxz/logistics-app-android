<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvWelcomeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/branch_dashboard_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:paddingStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnLogout" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/branch_dashboard_subtitle"
            android:textSize="16sp"
            android:textColor="@color/on_surface_secondary"
            android:paddingStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcomeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnLogout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/on_surface_secondary"
            app:icon="@drawable/ic_logout"
            app:iconTint="@color/on_surface_secondary"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/tvWelcomeTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvWelcomeTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/register_new_request"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="12dp"
            android:backgroundTint="@color/accent_orange"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_add_request"
            app:iconTint="@color/md_white"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvHeaderPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pendientes de Asignación"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="32dp"
            android:paddingStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNewRequest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnTogglePending" />

        <ImageButton
            android:id="@+id/btnTogglePending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="Ocultar pendientes"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/tvHeaderPending"
            app:layout_constraintBottom_toBottomOf="@+id/tvHeaderPending"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="24dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderPending"
            tools:listitem="@layout/item_solicitud_branch" />

        <TextView
            android:id="@+id/tvHeaderInRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Envíos en Ruta/Tránsito"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="32dp"
            android:paddingStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rvPending"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnToggleInRoute" />

        <ImageButton
            android:id="@+id/btnToggleInRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="Mostrar envíos en ruta"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/tvHeaderInRoute"
            app:layout_constraintBottom_toBottomOf="@+id/tvHeaderInRoute"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="24dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderInRoute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:listitem="@layout/item_solicitud_branch" />

        <TextView
            android:id="@+id/tvHeaderCompleted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Historial (Entregados/Devueltos)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="32dp"
            android:paddingStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rvInRoute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnToggleCompleted" />

        <ImageButton
            android:id="@+id/btnToggleCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="Mostrar historial"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/tvHeaderCompleted"
            app:layout_constraintBottom_toBottomOf="@+id/tvHeaderCompleted"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCompleted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="24dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderCompleted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:listitem="@layout/item_solicitud_branch" />


        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_requests_in_branch_list"
            android:textSize="16sp"
            android:textColor="@color/on_surface_secondary"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderPending"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
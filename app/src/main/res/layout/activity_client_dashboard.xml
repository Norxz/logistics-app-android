<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:paddingHorizontal="24dp"> <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/client_dashboard_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLogout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/on_surface_secondary"
            app:icon="@drawable/ic_logout"
            app:iconTint="@color/on_surface_secondary"
            app:layout_constraintTop_toTopOf="@+id/tvWelcomeTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvWelcomeTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNuevaSolicitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pick_recolection"
            android:layout_marginTop="24dp"
            android:paddingVertical="14dp"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_add_request"
            app:iconTint="@color/md_white"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcomeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHeaderSolicitados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mis Solicitudes Activas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNuevaSolicitud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnToggleSolicitados" />

        <ImageButton
            android:id="@+id/btnToggleSolicitados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="@string/show_pickups"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvHeaderSolicitados"
            app:layout_constraintBottom_toBottomOf="@+id/tvHeaderSolicitados"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEmptySolicitados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_solicitudes"
            android:textSize="16sp"
            android:textColor="@color/on_surface_secondary"
            android:paddingVertical="24dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderSolicitados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSolicitados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tvEmptySolicitados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHeaderFinalizados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Historial de EnvÃ­os Finalizados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/rvSolicitados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnToggleFinalizados" />

        <ImageButton
            android:id="@+id/btnToggleFinalizados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="@string/show_history"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvHeaderFinalizados"
            app:layout_constraintBottom_toBottomOf="@+id/tvHeaderFinalizados"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEmptyFinalizados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_shipments"
            android:textSize="16sp"
            android:textColor="@color/on_surface_secondary"
            android:paddingVertical="24dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderFinalizados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFinalizados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tvEmptyFinalizados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
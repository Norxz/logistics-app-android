<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/on_surface_secondary"
    app:strokeWidth="1dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gps_fixed"
            android:contentDescription="@string/pick_up_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/tvShipmentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/guide_example"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintStart_toEndOf="@+id/ivLocationIcon"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDIENTE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/status_pending"
            app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calle Falsa 123, Springfield, USA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLocationIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmar Recogida"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/status_success"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>